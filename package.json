{
  "name": "mcp-woocommerce-server",
  "version": "1.0.0",
  "description": "MCP Server for WooCommerce integration with n8n support",
  "main": "dist/index.js",
  "bin": {
    "mcp-woocommerce-server": "dist/index.js"
  },
  "scripts": {
    "build": "tsc && chmod +x dist/index.js",
    "dev": "ts-node src/index.ts",
    "start": "node dist/index.js",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "docker:build": "docker build -t mcp-woocommerce .",
    "docker:run": "docker run -p 3000:3000 mcp-woocommerce"
  },
  "keywords": [
    "mcp",
    "model-context-protocol", 
    "woocommerce",
    "n8n",
    "easypanel",
    "ai",
    "automation"
  ],
  "author": "Marco - Marketing Digital Expert",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "axios": "^1.7.9",
    "express": "^4.21.2",
    "cors": "^2.8.5",
    "helmet": "^8.0.0",
    "morgan": "^1.10.0",
    "winston": "^3.15.0",
    "joi": "^17.13.3",
    "dotenv": "^16.4.7",
    "crypto-js": "^4.2.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.6",
    "@types/express": "^5.0.0",
    "@types/cors": "^2.8.17",
    "@types/morgan": "^1.9.9",
    "@types/jest": "^29.5.14",
    "typescript": "^5.7.3",
    "ts-node": "^10.9.2",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "eslint": "^9.17.0",
    "@typescript-eslint/eslint-plugin": "^8.19.0",
    "@typescript-eslint/parser": "^8.19.0",
    "prettier": "^3.4.2",
    "nodemon": "^3.1.7"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}